<MainLayout title={title} description={metaDescription} headerColors={headerColorConfig}>
      <!-- Hero Section - Orange -->
    <section id="hero" class="h-[300px] lg:h-[800px] relative overflow-hidden" style="background-image: url('https://snack.yummiespromociones.com/SnacksyummiesAssets/coverzibascreators.webp'); background-size: cover; background-position: center; background-repeat: no-repeat;">
      <!-- Background decorative bars -->
      
      
      <!-- Main content -->
      <div class="relative z-10 flex items-center justify-center h-full">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Left Content -->
            <div class="text-white  hero-content animate-fade-in-up">
              <h1 class="text-5xl md:text-7xl font-title font-bold leading-tight animate-fade-in-up animation-delay-200">
                BIENVENIDO A CASA, CREADOR.
              </h1>
              <p class="text-xl md:text-2xl leading-relaxed font-medium animate-fade-in-up animation-delay-400 mb-8">
                AQUÍ PREMIAREMOS TU TALENTO EN VIDEO, BAILE, MÚSICA, ARTE, MEMES E INTELIGENCIA ARTIFICIAL.
